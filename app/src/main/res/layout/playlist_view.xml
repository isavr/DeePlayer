<?xml version="1.0" encoding="utf-8"?>
<com.tutorial.deeplayer.app.deeplayer.views.items.PlaylistItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center">

    <ImageButton
        android:id="@+id/icon_view"
        android:layout_width="@dimen/radio_item_width"
        android:layout_height="@dimen/radio_item_height"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_margin="@dimen/radio_item_border"
        android:background="@null"
        android:clickable="false"
        android:contentDescription="Playlist icon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/icon_view"
        android:layout_alignRight="@+id/icon_view"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:maxWidth="@dimen/radio_item_width"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:gravity="center"
            android:maxWidth="@dimen/radio_item_width"
            android:padding="4dp"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:text="Classic Rock"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/creator_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:gravity="center"
            android:maxWidth="@dimen/radio_item_width"
            android:padding="4dp"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:text="by Anonimus"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@android:color/white" />
    </LinearLayout>

</com.tutorial.deeplayer.app.deeplayer.views.items.PlaylistItemView>