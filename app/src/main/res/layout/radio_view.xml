<?xml version="1.0" encoding="utf-8"?>
<com.tutorial.deeplayer.app.deeplayer.views.RadioItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:descendantFocusability="blocksDescendants">

    <ImageButton
        android:id="@+id/icon_view"
        android:layout_width="@dimen/radio_item_width"
        android:layout_height="@dimen/radio_item_height"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_margin="@dimen/radio_item_border"
        android:background="@null"
        android:clickable="false"
        android:contentDescription="Radio icon"/>

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:clickable="false"
        android:maxWidth="@dimen/radio_item_width"
        android:padding="4dp"
        android:shadowColor="@android:color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="Classic Rock"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@android:color/white"/>

    <CheckBox
        android:id="@+id/favourite_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/abc_button_inset_horizontal_material"
        android:layout_marginStart="@dimen/abc_button_inset_horizontal_material"
        android:layout_marginTop="@dimen/abc_button_inset_horizontal_material"
        android:clickable="true"/>
</com.tutorial.deeplayer.app.deeplayer.views.RadioItemView>
