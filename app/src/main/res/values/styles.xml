<resources>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout"></style>

    <style name="MyCustomTabLayout.Amber" parent="MyCustomTabLayout">
        <item name="tabSelectedTextColor">@color/tab_selected_amber</item>
        <item name="tabTextColor">@color/tab_unselected_amber</item>
    </style>

    <style name="MyCustomTabLayout.Pink" parent="MyCustomTabLayout">
        <item name="tabSelectedTextColor">@color/tab_selected_pink</item>
        <item name="tabTextColor">@color/tab_unselected_pink</item>
    </style>

    <style name="MyCustomTabLayout.Orange" parent="MyCustomTabLayout">
        <item name="tabSelectedTextColor">@color/tab_selected_orange</item>
        <item name="tabTextColor">@color/tab_unselected_orange</item>
    </style>

    <style name="MyCustomTabLayout.Green" parent="MyCustomTabLayout">
        <item name="tabSelectedTextColor">@color/tab_selected_green</item>
        <item name="tabTextColor">@color/tab_unselected_green</item>
    </style>

    <style name="MyCustomCheckedTextView" parent="TextAppearance.AppCompat.Headline">
        <item name="android:drawableRight">@null</item>
    </style>

    <style name="CustomToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:elevation">4dp</item>
        <item name="android:visibility">visible</item>
    </style>

</resources>
